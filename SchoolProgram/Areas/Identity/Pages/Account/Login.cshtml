@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}




<body class="bg-image">
    <style type="text/css">
        .bg-image {
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-image: url('https://jm23sa.blob.core.windows.net/schoolprogrampictures/BackgroundBlurred.jpg');
            /*  Lägg in rätt url ovanför  */
        }
        footer {
            background: rgba(0, 0, 0, 0.7);
            border-top: 2px solid #808080;
        }
        #back2 {
            background: #000000;
        }

        #div-form1 {
            margin-top: 10rem;
        }
        #div-form2 {
            padding: 1rem;
            background: rgba(105, 214, 238, 0.65);
            border: 4px solid #000000;
            border-radius: 10px;
        }
    </style>
  
    <div id="div-form1"  class="row justify-content-xl-center">

        <div id="div-form2" class="col-md-4">
            <section>
                <form id="account" method="post">
                    <h1>Welcome to SchoolProgram</h1>
                    <h4>Please login with your school credentials</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Log in</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>

                    </div>
                </form>
            </section>
        </div>

    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
